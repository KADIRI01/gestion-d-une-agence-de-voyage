{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile JavaFX",
        "type": "shell",
        "command": "javac",
        "args": [
          "--module-path", "lib/javafx-sdk-20/lib",
          "--add-modules", "javafx.controls,javafx.fxml",
          "-d", "bin",
          "src/model/*.java",
          "src/controller/*.java",
          "src/view/*.java"
        ],
        "group": { "kind": "build", "isDefault": true },
        "problemMatcher": "$javac"
      }
    ]
  }
  